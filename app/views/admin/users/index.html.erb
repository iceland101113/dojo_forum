<div class="container">
 
  <div>
    <%= link_to 'Categories', admin_categories_path %> | <%= link_to 'User List', admin_users_path %>
  </div>
  <br>
  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Introduction</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.description %></td>
            <td>
              <div class="form-inline" >
              <%= form_for [:admin, user] do |f| %>
              <div class="form-group">
              <%= f.collection_select :role_id, Role.all, :id, :rtype, {prompt: true}, {class: "form-control"} %></div>
              <%= f.submit class: "btn btn-primary", value: 'Update'%>
              <% end %></div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>